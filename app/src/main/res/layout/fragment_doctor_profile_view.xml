<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context="com.example.mydoctor.mydoctor.Navigation.DoctorProfileView">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_blue"
                android:theme="@style/AppTheme.AppBarOverlay">


                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_doctorProfView"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/doctor_profile"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/docProfView_backButton"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_gravity="end"
                        android:background="@color/app_blue"
                        android:text="Back"
                        android:textColor="@color/colorWhite"
                        android:visibility="gone" />

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/docImageDocProfileView"
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/doctor"
                    android:transitionName="@string/TransitionName" />


                <ImageButton
                    android:id="@+id/addDocAsFavourite"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/fav_added" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/profileView_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/view_count" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:text="1000+"
                        android:textColor="@color/app_dark_blue"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/doctor_rating" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:text="Rating"
                        android:textAlignment="center"
                        android:textColor="@color/app_dark_blue"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/apt_count" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:text="100+"
                        android:textColor="@color/app_dark_blue"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/verified_profile" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:text="Verified"
                        android:textColor="@color/app_dark_blue"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/greyish"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/docName_docProfileView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="start"
                    android:textColor="@color/app_orange"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/docSpec_docProfileView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="start"
                    android:text="Specialization: "
                    android:textColor="@color/app_dark_blue"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/docExp_docProfileView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="start"
                    android:text="Experience:"
                    android:textColor="@color/app_dark_blue"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/cityDocprofview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:gravity="start"
                    android:textColor="@color/app_dark_blue"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="16dp"
                    android:text="About:"
                    android:textColor="@color/app_dark_blue"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/docDesc_docProfileView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:maxLines="5"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColor="@color/app_dark_blue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fee Details:"
                        android:textColor="@color/app_orange"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/videoCallFeeTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Video Call:"
                        android:textColor="@color/app_dark_blue"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/chatFeeTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Text Chat:"
                        android:textColor="@color/app_dark_blue"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/appointmentFeeTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Face-Face:"
                        android:textColor="@color/app_dark_blue"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="22dp"
                    android:background="@color/app_green"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/user_request_appointmentBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="3"
                        android:background="@drawable/video_select"
                        android:gravity="center"
                        android:text="Video Call"
                        android:textAllCaps="true"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/user_request_videoBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/app_green"
                        android:enabled="false"
                        android:text="Now"
                        android:textAllCaps="true" />

                    <Button
                        android:id="@+id/user_request_videoChatLaterBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@color/app_orange"
                        android:text="Later"
                        android:textAllCaps="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/app_green"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@drawable/chat_select"
                        android:gravity="center"
                        android:text="@string/chat"
                        android:textAllCaps="true"
                        android:textColor="#ffffff" />

                    <Button

                        android:id="@+id/user_request_chatBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/app_green"
                        android:enabled="false"
                        android:text="Now"
                        android:textAllCaps="true" />

                    <Button
                        android:id="@+id/user_request_chatLaterBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@color/app_orange"
                        android:text="Later"
                        android:textAllCaps="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/app_green"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.79"
                        android:background="@drawable/face_face"
                        android:gravity="center"
                        android:text="Face-Face"
                        android:textAllCaps="true"
                        android:textColor="#ffffff" />

                    <Button

                        android:id="@+id/face_face_book_appointment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/app_green"
                        android:text="Book Now"

                        android:textAllCaps="true" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </LinearLayout>


    </ScrollView>

    <include layout="@layout/include_progress_overlay"/>



</RelativeLayout>
