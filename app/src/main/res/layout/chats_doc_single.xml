<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorAccent"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_marginLeft="8dp"
                android:layout_height="80dp"
                android:id="@+id/senderPhotoChatHistoryIV"
                android:src="@drawable/chat_history_cardview_select"
                />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/senderNameChatHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shajahan Basha"
                    android:textColor="@color/app_orange"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/date_time_chat_history"
                    android:layout_width="match_parent"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content"
                    android:text="12 April  / 16:30"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/app_blue"
                    android:textSize="14sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:background="@drawable/accept_green_button"
                    android:textAlignment="center"
                    android:textSize="14dp"
                    android:id="@+id/chat_history_status"
                    android:textColor="#ffffff"
                    android:text="Completed"
                    />
            </LinearLayout>



        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>