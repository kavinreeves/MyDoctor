<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/full_screen_withlogo"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:baselineAligned="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Work Address"
            android:textAllCaps="true"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/hospitalName"
            style="EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorWhite"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="Name of Hospital"
            android:inputType="text"
            android:padding="8dp"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/hospitalNameline1"
            style="EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorWhite"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="Address Line 1"
            android:inputType="textPostalAddress"
            android:padding="8dp"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/hospitalNameline2"
            style="EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorWhite"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="Address Line 2"
            android:inputType="textPostalAddress"
            android:padding="8dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/hospitalNameCity"
            style="EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorWhite"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="City / Town"
            android:inputType="textPostalAddress"
            android:padding="8dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/hospitalNamePostcode"
            style="EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorWhite"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="Postcode"
            android:inputType="textPostalAddress"
            android:padding="8dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/docAlldoneRegBtn"
            style="@style/LoginButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="18dp"
            android:layout_weight="1"
            android:text="Complete Registration" />

    </LinearLayout>

</RelativeLayout>