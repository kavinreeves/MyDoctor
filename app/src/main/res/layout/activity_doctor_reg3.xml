<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00bcff"
    tools:context="com.example.mydoctor.mydoctor.DoctorReg3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:padding="8dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/professional_details"
            android:textAllCaps="true"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/editTextDocSpec"
            style="EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorWhite"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="@string/specialization"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1"
            android:padding="8dp"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/editTextDocExp"
            style="EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorWhite"
            android:cursorVisible="true"
            android:ems="10"
            android:maxLength="2"
            android:inputType="number"
            android:lines="1"
            android:maxLines="1"
            android:hint="@string/experience_in_years"
            android:padding="8dp"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/editTextDocQual"
            style="EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorWhite"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="@string/qualification"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1"
            android:padding="8dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editTextDocRegId"
            style="EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorWhite"
            android:cursorVisible="true"
            android:ems="10"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1"
            android:hint="@string/doctor_reg_id"
            android:padding="8dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/consulting_hours"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Before Noon"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <EditText
                android:id="@+id/editTextDocAMfrom"
                style="EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:cursorVisible="true"
                android:ems="10"
                android:editable="false"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:hint="@string/from"
                android:padding="8dp"
                android:textSize="14sp" />

            <EditText

                style="EditTextStyle"
                android:id="@+id/editTextDocAMTo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:background="@color/colorWhite"
                android:cursorVisible="true"
                android:ems="10"
                android:hint="@string/to"
                android:padding="8dp"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="After Noon"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <EditText
                android:id="@+id/editTextDocPMfrom"
                style="EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:cursorVisible="true"
                android:ems="10"
                android:hint="@string/from"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:padding="8dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/editTextDocPMto"
                style="EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:cursorVisible="true"
                android:ems="10"
                android:hint="@string/to"
                android:inputType="text"
                android:lines="1"
                android:maxLines="1"
                android:padding="8dp"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="2dp"
            android:text="@string/consultation_fee"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight=".5"
                    android:background="@color/login_button_color"
                    android:ems="10"
                    android:padding="8dp"
                    android:text="Currency"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/doc_currency"
                    style="EditTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:cursorVisible="true"
                    android:ems="10"
                    android:text="GBP"
                    android:padding="8dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:inputType="numberDecimal"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView


                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight=".5"
                    android:background="@color/login_button_color"
                    android:ems="10"
                    android:padding="8dp"
                    android:text="@string/face_face"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextDocF_fee"
                    style="EditTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:cursorVisible="true"
                    android:ems="10"
                    android:hint="@string/amount"
                    android:lines="1"
                    android:maxLines="1"
                    android:inputType="numberDecimal"
                    android:padding="8dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView


                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight=".5"
                    android:background="@color/login_button_color"
                    android:ems="10"
                    android:padding="8dp"
                    android:text="@string/chat"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText

                    android:id="@+id/editTextDocVideo_fee"
                    style="EditTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:cursorVisible="true"
                    android:ems="10"
                    android:hint="@string/amount"
                    android:lines="1"
                    android:maxLines="1"
                    android:inputType="numberDecimal"
                    android:padding="8dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    style="EditTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_weight=".5"
                    android:background="@color/login_button_color"
                    android:ems="10"
                    android:padding="8dp"
                    android:text="@string/video"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextDocChat_fee"
                    style="EditTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:cursorVisible="true"
                    android:ems="10"
                    android:hint="@string/amount"
                    android:inputType="numberDecimal"
                    android:padding="8dp"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="40dp">

            <Button
                style="@style/LoginButtonStyle"
                android:id="@+id/docReg3Next"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:text="Next" />

            <Button
                style="@style/LoginButtonStyle"
                android:id="@+id/docReg3Skip"
                android:layout_width="0dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:visibility="gone"
                android:text="Skip >>"
                />


        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
