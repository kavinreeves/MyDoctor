<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="8dp"
            android:text="Select your Account Nick Name:"
            android:textColor="@color/app_dark_blue"
            android:textSize="14sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/chooseAccNickname"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="18dp"
            android:layout_weight="2"
            android:background="@color/colorWhite"
            android:hint="Account Nick Name"
            android:inputType="phone"
            android:lines="1"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:textColor="@color/login_input_text"
            android:textColorHint="@color/login_input_text"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/sendMoneyAmount"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:hint="Enter Amount"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:textColor="@color/login_input_text"
            android:textColorHint="@color/login_input_text"
            android:lines="1"
            android:maxLines="1"
            android:textSize="14sp" />


        <Button
            android:id="@+id/sendMoneyBtn"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="2dp"
            android:background="@color/app_dark_blue"
            android:text="Send Money"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />


    </LinearLayout>


</FrameLayout>