<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/greyish">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:layout_marginBottom="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/doc_bookings_cardviewIV"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/chat_history_cardview_select" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/patname_doc_bookingsAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shajahan Basha"
                    android:textAlignment="center"
                    android:textColor="@color/app_orange"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/aptTime_doc_bookingsAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="12 April  / 16:30"
                    android:textAlignment="center"
                    android:textColor="@color/app_blue"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/status_doc_bookingsAll"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:background="@drawable/accept_green_button"
                    android:text="Completed"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="14dp" />
            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>