                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Quantity"
                                android:lines="1"
                                android:maxLines="1"
                                android:gravity="center"
                                android:textColor="@color/app_blue"
                                android:textColorHint="@color/app_blue" />

                            <EditText
