<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up_step2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mydoctor.mydoctor.Login.SignUpStep2Final">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <EditText
                android:id="@+id/editTextUserAge"
                style="EditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:cursorVisible="true"
                android:ems="10"
                android:hint="Age"
                android:inputType="number"
                android:padding="8dp" />

            <RadioGroup
                android:id="@+id/radioGrpUser_gender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButtonUser_male"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:checked="true"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/radioButtonUser_female"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female" />

            </RadioGroup>

        </LinearLayout>

        <EditText
            android:id="@+id/editText_user_addressLine1"
            style="EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"


            android:background="@color/colorWhite"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="Address Line1"
            android:inputType="textPostalAddress"
            android:padding="8dp" />


        <EditText
            android:id="@+id/editText_user_addressLine2"
            style="EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@color/colorWhite"
            android:cursorVisible="true"
            android:hint="Line2"
            android:inputType="textPostalAddress"
            android:padding="8dp" />

        <EditText
            android:id="@+id/editText_user_addressLine3"
            style="EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"



            android:background="@color/colorWhite"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="Line3"
            android:inputType="textPostalAddress"
            android:padding="8dp" />


        <EditText
            android:id="@+id/editText_user_postcode"
            style="EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"

            android:background="@color/colorWhite"
            android:cursorVisible="true"
            android:ems="10"
            android:hint="Postcode"
            android:inputType="textPostalAddress"
            android:padding="8dp" />

        <Button
            android:text="Complete Registration"
            android:layout_width="match_parent"
            style="@style/LoginButtonStyle"
            android:layout_marginTop="12dp"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:layout_height="40dp"
            android:id="@+id/user_register2Btn" />


    </LinearLayout>
</RelativeLayout>
