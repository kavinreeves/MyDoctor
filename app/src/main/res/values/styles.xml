<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"

        />

    <style name="HomePageIconsTextColor">
        <item name="android:textColor">@color/login_button_color</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SocialButtonStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/fill_round_rect_light_grey_border_grey</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:width">@dimen/button_width</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LoginButtonStyle" parent="android:Widget.Button">
        <item name="android:background">@color/login_button_color</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:width">@dimen/button_width</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:background">@drawable/round_rect_fill_white</item>
        <item name="android:height">@dimen/edit_text_height</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/margin_small</item>
        <item name="android:fontFamily">calibri</item>
    </style>

    <style name="RegisterPage1" parent="AppTheme" >
        <item name="colorPrimary">@color/cardview_light_background</item>
        <item name="android:textColor">@color/login_button_color</item>

    </style>

</resources>
